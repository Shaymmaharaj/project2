<h2 style="color: chartreuse; display:flex; justify-content:center">New question</h2>
<h3>{{errorMessage}}</h3>


<form action="/" method="POST">
    <label for="question" style="color: chartreuse">question</label>
    <input type="text" name="question" style="margin: 0px; height: 100px; width: 425px;">
    <span class="answerField">
    <label for="answer" style="color: chartreuse">answer:</label>
    <input type="text" name="answer" placeholder="answer here" style="margin: 0px; height: 100px; width: 425px;">
    <input type="submit" value="Make It">
    </span>
    <script>
       let add = document.querySelector('.add-answer');

        add.addEventListener('click', function(e){
            let answerField = document.querySelector('.answerField');
            let newItem = document.createElement('li');
            let newInput = document.createElement('input');
            newInput.setAttribute('type', 'text');
            newInput.setAttribute('name', 'answers');
            newItem.appendChild(newInput);
            answerField.appendChild(newItem);
    
        })
    </script>
</form>